<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title><%= title %></title>
</head>
<body>

<div class="container">

    <% if (created) { %>
        <div class="alert alert-success d-flex justify-content-between">
            <p>Note has been created</p>
            <button class="btn btn-success" data-type="remove-alert">&times;</button>
        </div>
    <% } %>

    <h1><%= title %></h1>
    <form action="/" method="post" class="mb-2">
        <div class="form-group mb-2">
            <input type="text" class="form-control" name="title" required>
        </div>

        <button class="btn btn-primary" type="submit">Create!</button>
    </form>

    <% if (notes.length) { %>
        <div class="card">
            <ul class="list-group">
                <% for (let i = 0; i < notes.length; i++ ) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center" data-id="<%= notes[i].id %>">
                        <p><%= notes[i].title %></p>
                        <div class="buttons">
                            <button class="btn btn-primary" data-type="update">Обновить</button>
                            <button class="btn btn-danger" data-type="remove">&times;</button>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } else { %>
        <p>No notes!</p>
    <% } %>

</div>

<script src="/app.js"></script>
</body>
</html>